<div class="row">
    {% for trick in tricks %}  
        <div class="col-lg-4">
            <div class="card mb-3"> 
                <h3 class="card-header">{{ trick.name }}</h3>
                <img style="height: 200px; width: 100%; display: block;" src="{{ asset('pictures/' ~ trick.getPictures()[0].name) }}" alt="">
            </div>
            <br>
            {# Buttons #}
            <a href="{{ path('trick_show', { 'slug': trick.slug }) }}" class="btn btn-secondary">Lire</a>                                 
            <a href="{{ path('trick_modify', { 'slug': trick.slug }) }}" class="btn btn-warning">Modifier</a>                                                          
            <a href="{{ path('trick_delete', { 'slug': trick.slug }) }}" class="btn btn-danger">Effacer</a>  
            <a href="#" class="btn btn-danger js-delete-trick" id="{{ trick.id }}">Effacer</a>                 
            <hr>
        </div>
    {% endfor %}
</div>