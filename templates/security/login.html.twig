{% extends 'base.html.twig' %}

{% block title %}Connexion!{% endblock %}

{% block body %}
    {# <div class="container"> #}

        <div class="row">
            <div class="col-md-3">&nbsp;</div>
            <div class="col-md-6">
                <div class="bg-light py-3 px-3">
                    <h1>Login</h1>
                    {% if hasError %}
                        <div class="alert alert-danger">Identifiant ou mot de passe Incorrect</div> 
                    {% endif %}
                    <form action="{{ path('security_login') }}" method="post">
                        <div class="form-group">
                            <label for="username">Username</label>
                            <input type="text" name="_username" id="username" class="form-control" placeholder="Nom ..." required value="{{username}}"> 
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" name="_password" id="password" class="form-control" placeholder="Mot de passe ..." required> 
                        </div>
                        <div class="form-group">
                            <input type="hidden" name="_target_path" value="{{ path('homepage') }}" />
                            <button type="submit" class="btn btn-success">Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    {# </div> #}
{% endblock %}
